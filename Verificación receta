<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Verificación de Receta</title>
</head>
<body>
    <h1>Verificación de Receta</h1>
    <div id="info"></div>

    <script>
        const urlParams = new URLSearchParams(window.location.search);
        const nombre = urlParams.get('nombre');
        const dni = urlParams.get('dni');
        const receta = urlParams.get('receta');

        document.getElementById('info').innerHTML = `
            <p><strong>Paciente:</strong> ${nombre || "No disponible"}</p>
            <p><strong>DNI:</strong> ${dni || "No disponible"}</p>
            <p><strong>Número de Receta:</strong> ${receta || "No disponible"}</p>
        `;
    </script>
</body>
</html>